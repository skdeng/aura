<Window x:Class="Aura.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Aura"
        mc:Ignorable="d"
        Closing="Window_Closing"
        Title="MainWindow" SizeToContent="WidthAndHeight" ResizeMode="NoResize">
    <Canvas x:Name="MainCanvas" Width="Auto" Height="Auto">
        <Image x:Name="MainImage" Source="{Binding Path=ImageData.SourceBitmap}"/>
    </Canvas>
</Window>
